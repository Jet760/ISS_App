<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISS_App.HomePage"
             
             IconImageSource="iss">
    <ContentPage.Content>
        <Grid BackgroundColor="#36393f">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <StackLayout BackgroundColor="Green" Grid.Row="0">
            <Label Text="LOCATION LAT:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="labelLat" Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
        <StackLayout BackgroundColor="Green" Grid.Row="1">
            <Label Text="LOCATION Long:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="labelLong" Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
            <Button x:Name="buttonRefresh" Text="Refresh" Grid.Row="3" Clicked="buttonRefresh_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>