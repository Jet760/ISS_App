<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISS_App.AstronautView">
  <ContentView.Content>
        <Frame CornerRadius="15" BackgroundColor="#484848" Padding="0">
            <StackLayout Padding="20">
            <StackLayout Orientation="Horizontal" >
                <Label Text="Name:" TextColor="White" />
                <Label x:Name="labelAstronautName" TextColor="White"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Craft: " TextColor="White"/>
                <Label x:Name="labelAstronautCraft" TextColor="White"/>
            </StackLayout>
        </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>