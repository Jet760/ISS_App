<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISS_App.AstronautView">
  <ContentView.Content>
        <Frame CornerRadius="15" BackgroundColor="{DynamicResource ButtonColour}" Padding="0">
            <StackLayout Padding="20">
            <StackLayout Orientation="Horizontal" >
                    <Label Text="Name:" TextColor="{DynamicResource PrimaryTextColour}" />
                    <Label x:Name="labelAstronautName" TextColor="{DynamicResource PrimaryTextColour}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                    <Label Text="Craft: " TextColor="{DynamicResource PrimaryTextColour}"/>
                    <Label x:Name="labelAstronautCraft" TextColor="{DynamicResource PrimaryTextColour}"/>
            </StackLayout>
        </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>