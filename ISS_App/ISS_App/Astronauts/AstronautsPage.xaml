<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISS_App.AstronautsPage"
             IconImageSource="astronaut">
    <ContentPage.Content>

        <Grid BackgroundColor="{DynamicResource PageBackgroundColour}" HorizontalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            <StackLayout Grid.Column="1">
                <StackLayout Orientation="Horizontal" Padding="15" HorizontalOptions="Center">
                    <Label Text="Number of people in space: " TextColor="{DynamicResource PrimaryTextColour}" FontSize="Medium"/>
                    <Label x:Name="labelNumberOfPeople" TextColor="{DynamicResource PrimaryTextColour}" FontSize="Medium"/>
                </StackLayout>
                <ScrollView >
                    <StackLayout x:Name="stackLayoutAstronauts"  Spacing="20">
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </Grid>
        
        
        
    </ContentPage.Content>
</ContentPage>